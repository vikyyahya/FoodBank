<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/food_app"
    android:orientation="vertical"
    android:id="@+id/superadmin_restaurant">

    <TextView
        android:id="@+id/admintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#aeee"
        android:gravity="center"
        android:text="bappy"
        android:textSize="15sp" />

    <com.example.bappy.foodbank.FButton
        android:layout_width="194dp"
        android:layout_height="34dp"
        android:text="Pending restaurent"
        android:textColor="#fff"
        android:textSize="15sp"
        android:onClick="pendingrestaurant"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        app:buttonColor="@drawable/blue_color"
        app:shadowEnabled="true"
        app:cornerRadius="7dp"
        app:shadowHeight="4dp"
        android:shadowColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active"
        android:background="#aeee"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lisview"
        android:layout_marginTop="5dp"
        />
</LinearLayout>
