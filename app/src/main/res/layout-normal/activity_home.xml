<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/home_app">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Log In"
        android:layout_gravity="end"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:id="@+id/logger"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/home_icon"
        android:layout_marginTop="35dp"
        />

    <com.example.bappy.foodbank.FButton
        android:id="@+id/restaurent"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Restaurant"
        android:textSize="15sp"
        app:buttonColor="@color/buttoncolor"
        android:onClick="parsejsonrestaurent"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="6dp"
        />

    <com.example.bappy.foodbank.FButton
        android:id="@+id/findfood"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="parsejsonfood"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="I Am Hungry For"
        android:textSize="15sp"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="6dp"/>

    </LinearLayout>
