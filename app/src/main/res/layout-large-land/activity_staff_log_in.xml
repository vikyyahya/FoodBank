<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/food_app"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/staff_login">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Are In Staff Log-In Page And Please Give Your \nInformation To Log-In"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input Your Username"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:textSize="25sp"
        android:textColor="#fff"
        android:inputType="text"
        android:maxLines="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="#757575"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Role"
            android:textColor="#00a"
            android:textSize="25sp"
            android:layout_marginTop="6dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinnerrole"
            android:textAlignment="center"
            ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/linearres"
        android:background="#757575">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant : "
            android:textColor="#00a"
            android:textSize="25sp"
            android:layout_marginTop="6dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinnerres"
            android:textAlignment="center"
            ></Spinner>
    </LinearLayout>

    <EditText
        android:id="@+id/restaurentpassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Password"
        android:textAlignment="center"
        android:textColorHint="#fff"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="#fff"
        android:maxLines="1"/>

    <com.example.bappy.foodbank.FButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log-In"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:onClick="onLogin"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="7dp"
        />

    <com.example.bappy.foodbank.FButton
        android:layout_width="454dp"
        android:layout_height="wrap_content"
        android:text="i am superadmin"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:background="#aeee"
        android:onClick="onLoginsuperadmin"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="7dp"
        />

</LinearLayout>
