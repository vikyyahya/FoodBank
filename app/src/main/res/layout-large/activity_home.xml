<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/home_app"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Log In"
        android:layout_gravity="end"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginRight="10dp"
        android:id="@+id/logger"
        android:textSize="35sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/home_icon" />

    <com.example.bappy.foodbank.FButton
        android:id="@+id/restaurent"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="Restaurant"
        android:textSize="30sp"
        app:buttonColor="@color/buttoncolor"
        android:onClick="parsejsonrestaurent"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="9dp"
        />

    <com.example.bappy.foodbank.FButton
        android:id="@+id/findfood"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:onClick="parsejsonfood"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="I Am Hungry For"
        android:textSize="30sp"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="@color/shadowcolor"
        app:shadowEnabled="true"
        app:shadowHeight="5dp"
        app:cornerRadius="9dp"/>

    <!--<com.example.bappy.foodbank.FButton-->
