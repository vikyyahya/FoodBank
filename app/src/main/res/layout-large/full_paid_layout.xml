<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/food_app"
    android:orientation="vertical"
    android:id="@+id/full_paid">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#fff"
        android:id="@+id/txtviw"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/red_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid price :   "
            android:textSize="25sp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:textSize="25sp"
            android:id="@+id/paidprice"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Taka"
            android:textSize="25sp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#aeee">
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="29-6-17"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/startdateview"
            />
        <com.example.bappy.foodbank.FButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Start date"
            android:id="@+id/startdate"
            android:textSize="18sp"
            android:shadowColor="#000"
            app:shadowEnabled="true"
            app:shadowHeight="4dp"
            app:buttonColor="#aeee"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#aeee">

        <TextView
            android:id="@+id/enddateview"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="29-6-17"
            android:textSize="25sp" />

        <com.example.bappy.foodbank.FButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="End date"
            android:id="@+id/enddate"
            android:textSize="18sp"
            android:shadowColor="#000"
            app:shadowEnabled="true"
            app:shadowHeight="4dp"
            app:buttonColor="#aeee" />
    </LinearLayout>
    <com.example.bappy.foodbank.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getprice"
        android:text="getprice"
        android:textSize="20sp"
        android:onClick="getpriceindate"
        app:cornerRadius="7dp"
        android:shadowColor="#000"
        app:shadowEnabled="true"
        app:shadowHeight="4dp"
        app:buttonColor="#fff"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:text="All Order Price"
        android:textSize="20sp"
        android:gravity="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/foodstafflist"
        ></ListView>
</LinearLayout>