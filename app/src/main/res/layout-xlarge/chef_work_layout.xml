<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.activity.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/only_staff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bappy"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_weight="5"/>
        <com.example.bappy.foodbank.FButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aeee"
            android:textColor="@drawable/blue_color"
            android:textAlignment="center"
            android:text="All Order"
            android:textSize="35sp"
            android:onClick="allorder"
            android:layout_marginTop="4dp"
            android:layout_weight="5"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="12dp"
            app:buttonColor="@color/buttoncolor"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="35sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="85dp"/>

    <com.example.bappy.foodbank.FButton
        android:id="@+id/getdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get Date"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="160dp"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="12dp"
        app:buttonColor="@color/buttoncolor"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>
    <com.example.bappy.foodbank.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#aeee"
        android:id="@+id/todaytask"
        android:text="Today Task"
        android:textSize="35sp"
        android:onClick="todaytask"
        android:layout_gravity="center"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="12dp"
        app:buttonColor="@color/buttoncolor"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>

    <com.example.bappy.foodbank.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#aeee"
        android:id="@+id/donelist"
        android:text="Done List"
        android:textSize="35sp"
        android:onClick="donelist"
        android:layout_gravity="center"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="12dp"
        app:buttonColor="@color/buttoncolor"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>

    <com.example.bappy.foodbank.FButton
        android:id="@+id/undonelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="#aeee"
        android:onClick="undonelist"
        android:shadowColor="#000"
        android:text="Undone List"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:buttonColor="@color/buttoncolor"
        app:cornerRadius="12dp"
        app:shadowEnabled="true"
        app:shadowHeight="4dp" />
</LinearLayout>