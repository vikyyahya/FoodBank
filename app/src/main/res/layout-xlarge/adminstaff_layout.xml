<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bappy.foodbank.activity.Adminstaff"
    android:orientation="vertical"
    android:background="@drawable/food_app"
    android:id="@+id/adminstaff"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="bappy"
            android:textSize="45sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_marginTop="30dp"/>
        <com.example.bappy.foodbank.FButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#aeee"
            android:textAlignment="center"
            android:text="All order"
            android:textSize="40sp"
            android:onClick="allorder"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            app:buttonColor="@color/buttoncolor"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bappy"
        android:textSize="45sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:id="@+id/date"
        android:layout_marginTop="25dp"/>
    <com.example.bappy.foodbank.FButton
        android:id="@+id/getdate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="Get date"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:layout_weight="0.07"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <com.example.bappy.foodbank.FButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="#aeee"
        android:id="@+id/orderlist"
        android:text="order list"
        android:textSize="35sp"
        android:onClick="orderlist"
        android:layout_weight="0.06"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

        <com.example.bappy.foodbank.FButton
            android:id="@+id/deliverylist"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.05"
            android:background="#aeee"
            android:onClick="deliverylist"
            android:text="delivery list"
            android:textSize="35sp"
            app:buttonColor="@color/buttoncolor"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <com.example.bappy.foodbank.FButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
            android:layout_height="70dp"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:background="#aeee"
        android:onClick="getfullprice"
        android:text="Get full price"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_weight="0.06"
            app:buttonColor="@color/buttoncolor"
            android:shadowColor="#000"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            app:cornerRadius="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <com.example.bappy.foodbank.FButton
                android:id="@+id/assignstaff"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="#aeee"
                android:textAlignment="center"
                android:text="Assign Staff"
                android:textSize="35sp"
                android:layout_gravity="end"
                android:onClick="assignstaff"
                app:buttonColor="@color/buttoncolor"
                android:shadowColor="#000"
                app:shadowHeight="4dp"
                app:shadowEnabled="true"
                app:cornerRadius="7dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:layout_weight="5"
                />

            <com.example.bappy.foodbank.FButton
                android:id="@+id/assignchef"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:background="#aeee"
                android:onClick="assignchef"
                android:shadowColor="#000"
                android:text="Assign Chef"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="35sp"
                app:buttonColor="@color/buttoncolor"
                app:cornerRadius="7dp"
                app:shadowEnabled="true"
                app:shadowHeight="4dp" />
        </LinearLayout>

        <com.example.bappy.foodbank.FButton
        android:id="@+id/pendingstaff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="pending staff Chef"
        android:textSize="35sp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:onClick="pending"
        android:layout_weight="0.06"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <com.example.bappy.foodbank.FButton
        android:id="@+id/decorate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#aeee"
        android:textAlignment="center"
        android:text="decorate your menu"
        android:textSize="35sp"
        android:layout_gravity="start"
        android:onClick="decoraterestaurant"
        android:layout_marginTop="50dp"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:buttonColor="@color/buttoncolor"
        android:shadowColor="#000"
        app:shadowHeight="4dp"
        app:shadowEnabled="true"
        app:cornerRadius="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
