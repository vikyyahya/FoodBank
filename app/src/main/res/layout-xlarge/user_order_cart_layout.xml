<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="80sp"
        android:gravity="center"
        android:id="@+id/number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/sdeliverydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverydate"
            android:textSize="37sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition : "
                android:textSize="35sp" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="ready"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/snumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/sorderdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderdate"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/sdeliverytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deliverytype"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/sprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="price"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/spaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="paid"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sorderplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="orderplace"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.example.bappy.foodbank.FButton
                android:id="@+id/foodlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:shadowColor="#000"
                android:text="Food List"
                android:textAllCaps="false"
                android:textSize="30sp"
                app:buttonColor="@color/buttoncolor"
                app:cornerRadius="17dp"
                app:shadowEnabled="true"
                app:shadowHeight="4dp" />

            <com.example.bappy.foodbank.FButton
                android:id="@+id/showall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:shadowColor="#000"
                android:text="Show All"
                android:textAllCaps="false"
                android:textSize="30sp"
                app:buttonColor="@color/buttoncolor"
                app:cornerRadius="17dp"
                app:shadowEnabled="true"
                app:shadowHeight="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>