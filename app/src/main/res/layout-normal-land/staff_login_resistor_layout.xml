<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_app"
    tools:context="com.example.bappy.foodbank.activity.staff_login_resistor"
    android:baselineAligned="false"
    android:id="@+id/staff_login_register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/foodlinear"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/home_icon"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If You Are Already a Staff \nor Admin then Click LOGIN\nOtherwise Click REGISTER\n for Registration"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textAlignment="center" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="23dp"
        android:textIsSelectable="false"
        android:textStyle="bold|italic"
        android:onClick="skipall"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="15dp"
        android:id="@+id/linearLayout">

        <com.example.bappy.foodbank.FButton
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:onClick="login"
            android:text="Login"
            android:textSize="15sp"
            android:layout_weight="1"
            app:cornerRadius="6dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="4dp"
            android:shadowColor="@color/shadowcolor"
            app:buttonColor="@color/colorPrimary"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            android:textColor="#ffffff"/>

        <com.example.bappy.foodbank.FButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Sign Up"
            android:textSize="15sp"
            android:onClick="registeryou"
            android:layout_weight="1"
            app:cornerRadius="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="2dp"
            android:shadowColor="@color/shadowcolor"
            app:buttonColor="@color/red"
            app:shadowHeight="4dp"
            app:shadowEnabled="true"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</RelativeLayout>
