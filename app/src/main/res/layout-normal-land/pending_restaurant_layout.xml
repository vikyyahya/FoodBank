<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:id="@+id/pendin_restaurant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/restaurent"
        android:padding="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3E2723"
                    android:text="Restaurent"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/ttype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_gravity="left|bottom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tstreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="street"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/ttown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="town"
                    android:textSize="15sp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone number"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="admin"
                android:textSize="15sp"
                android:gravity="start"/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <info.hoang8f.widget.FButton
            android:id="@+id/approve"
            android:layout_width="176dp"
            android:layout_height="34dp"
            android:background="@drawable/blue_color"
            android:text="Add"
            android:textColor="#fff"
            android:textSize="15sp"
            app:buttonColor="@drawable/blue_color"
            app:cornerRadius="12dp"
            android:shadowColor="#000"
            app:shadowEnabled="true"
            app:shadowHeight="4dp"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/merge"
            android:layout_width="141dp"
            android:layout_height="34dp"
            android:text="Merge"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/blue_color"
            android:textColor="#fff"
            app:buttonColor="@drawable/blue_color"
            app:cornerRadius="12dp"
            android:shadowColor="#000"
            app:shadowEnabled="true"
            app:shadowHeight="4dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/red_color"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="15sp"
            app:buttonColor="@drawable/red_color"
            app:cornerRadius="12dp"
            android:shadowColor="#000"
            app:shadowEnabled="true"
            app:shadowHeight="4dp"/>
    </LinearLayout>

</LinearLayout>